@model Dashboard
    <head>
        <title>Hobbies</title>
    </head>
<h1 class="split">Hobbies</h1>
<h4 class="split">Hi @Model.CurrentUser.firstName !</h1>
<a href="logout" class="split"><button>Logout</button></a>
<hr>
<table class="table">
    <tr>
        <td>Hobby</td>
        <td>Enthusiasts</td>
    </tr>
@{
    foreach(Hobby h in @Model.Hobbies)
    {
    <tr>
        <td><a href="hobby/@h.hobbyID">@h.name</a></td>
        @if(@h.UsersJoined.Count > 0)
        {
            <td>@h.UsersJoined.Count</td>
        }
        else 
        {
            <td>0</td>
        }
    </tr>
    }
}
</table>
<a href="new"><button>New Hobby</button></a>