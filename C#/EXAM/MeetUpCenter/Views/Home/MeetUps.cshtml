@model Dashboard
    <head>
        <title>Meet Up Center</title>
    </head>
<h2>Welcome,  @Model.CurrentUser.name!</h2>
<a href="logout"><button>Logout</button></a>
<table>
    <tr>
        <td>Meet Up</td>
        <td>Date and Time</td>
        <td>Duration</td>
        <td>Event Coordinator</td>
        <td>No. of Participants</td>
        <td>Actions</td>
    </tr>
@{
    foreach(MeetUp m in @Model.MeetUps.OrderByDescending(m=>m.dateAndTime))
    {
    <tr>
        <td><a href="meetup/@m.MeetUpID">@m.name</a></td>
        <td>@m.dateAndTime</td>
        <td>@m.duration</td>
        <td>Coordinator</td>
        <td>@m.UsersJoined.Count
        </td>
        <td>
            <a href="meetup/{@m.MeetUpID}/join"><button>Join</button></a>
            <a href="meetup/{@m.MeetUpID}/delete"><button>Delete</button></a>
        </td>
    </tr>
    }
}
</table>
<a href="new"><button>Add New Activity</button></a>